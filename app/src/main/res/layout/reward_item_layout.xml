<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_bg">

    <ImageView
        android:id="@+id/rewards_coupon_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category_rewards_icon"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/rewards_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rewards"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rewards_coupon_icon"
        app:layout_constraintStart_toEndOf="@+id/rewards_coupon_icon"
        app:layout_constraintTop_toTopOf="@+id/rewards_coupon_icon" />

    <TextView
        android:id="@+id/rewards_coupon_validity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="3dp"
        android:text="valid till Mon, 24th May 2021"
        android:textSize="12sp"
        android:textColor="#3606b6"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rewards_coupon_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rewards_coupon_title" />

    <TextView
        android:id="@+id/rewards_coupon_body_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Get 50% off on any product above Rs. 500/- and
below Rs.2000/-"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewards_coupon_title" />
</androidx.constraintlayout.widget.ConstraintLayout>